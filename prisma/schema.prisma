generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Notification {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @db.Date
  email          String   @unique
  hashedPassword String
  name           String
  updateddAt     DateTime @db.Date
  username       String   @unique
}
